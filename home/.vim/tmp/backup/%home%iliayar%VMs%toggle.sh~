#!/bin/bash

state=$(cat ./attached)

if [ $state == 1 ]
then
	sudo virsh detach-device win10 --file ./A4Tech_mouse.xml
	sudo virsh detach-device win10 --file ./A4Tech_keyboard.xml
	echo "0" > ./attached
else
	sudo virsh attach-device win10 --file ./A4Tech_mouse.xml
    sudo virsh attach-device win10 --file ./A4Tech_keyboard.xml
    echo "1" > ./attached
fi

